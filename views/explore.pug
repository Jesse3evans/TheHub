extends layout 
block content
    #addForm(style=" position:absolute;left:23.3vw;z-index:1;top:6vw; padding:2vw;border-radius:2%; ")
        h1(style="text-align:center") Search Users
        form(action='/searchUsers/'+user.username method="post")
            input(type='text' name="entry" style="width:60%;margin-right:2vw")
            input(type='submit' value='Search')
        h1(style="text-align:center") Explore Users
        #margin-box(style=" height:50vw; border:1px solid white; border-radius:2%; ")
            #box
                each users in userArray
                    #userExplore
                        img#friendPic(src='https://www.personality-insights.com/wp-content/uploads/2017/12/default-profile-pic-e1513291410505.jpg')
                        a(href='/user/'+user.username+'/'+ users.username)
                            h1 #{users.displayName}
        footer
            h1 The Hub - Powered by the plug
